<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_9sdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/complain_history_img"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@color/primary_color"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/complain_history_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type : WatchMan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/complain_history_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title : elevator not working"
                        android:textSize="@dimen/_15sdp"
                        tools:ignore="HardcodedText"
                        />
                    <TextView
                        android:id="@+id/complain_history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 11/07/2022"
                        tools:ignore="HardcodedText"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/complain_history_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status : Complete"
                android:textSize="@dimen/_15ssp"
                tools:ignore="HardcodedText"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/complain_history_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                tools:ignore="HardcodedText"
                android:text="Description: something isuue but i sont understand what issue"
                android:textAlignment="textStart"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <Button
                    android:id="@+id/complain_aproove_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#2C321B"
                    android:text="✔"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginStart ="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:id="@+id/complain_un_aproove_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="✘"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginStart ="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:backgroundTint="#4C0606"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>