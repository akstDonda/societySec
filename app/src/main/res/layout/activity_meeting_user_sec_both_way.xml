<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meeting_bg"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MeetingUserSecBothWayActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/meeting_backgroun_image"
        android:contentDescription="transfer image showcase"
        tools:ignore="HardcodedText"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="Meeting"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/connectWithUserMeeting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/carter_one"
            android:padding="@dimen/_5sdp"
            android:text="Connect Meeting For Member"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/connectWithSecMeeting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/carter_one"
            android:padding="@dimen/_5sdp"
            android:text="Join With Admin"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText"
            android:text="--------------------------------------------------------------"/>




    </LinearLayout>

</LinearLayout>