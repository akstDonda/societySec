<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/sign_up_root"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context=".simple.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_12sdp"
            android:layout_weight="1.6"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="3sp"
            app:cardElevation="8dp"
            tools:ignore="NestedWeights">

        <ImageButton
            android:id="@+id/btn_back_reg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/baseline_arrow_circle_left_24"
            android:layout_gravity="center_horizontal"
            android:contentDescription="back btn"
            tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/welcome_text_signUp"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5.2">

        <EditText
            android:id="@+id/editTextTextSocietyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Society name"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="text"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:longClickable="false"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/editTextConformPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Conform Password"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="textPassword"
            android:longClickable="false"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/editTextSocAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Society Full Address"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="textMultiLine"
            android:lines="2"
            android:gravity="start"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_Register_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:padding="@dimen/_10sdp"
            android:backgroundTint="@color/primary_color"
            android:text="Register" />


    </LinearLayout>
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/regToLogin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/text_register_bottom"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    
    




</LinearLayout>