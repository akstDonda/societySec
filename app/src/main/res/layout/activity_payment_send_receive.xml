<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".simple.PaymentSendReceiveActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/money_transfer_image"
        android:contentDescription="transfer image showcase"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/recivePaymentToUser_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/carter_one"
            android:padding="@dimen/_5sdp"
            android:text="Receive Payment To User"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/sendPaymentToAdmin_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/carter_one"
            android:padding="@dimen/_5sdp"
            android:text="Send Payment to Admin"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText"
            android:text="--------------------------------------------------------------"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:text="Transaction"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_25ssp"
            tools:ignore="HardcodedText,TextSizeCheck" />


    </LinearLayout>

</LinearLayout>