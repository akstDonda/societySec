<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white"
    tools:context=".SuccessActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:layout_marginStart="@dimen/_22sdp"
                android:text="Transaction\n\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t Successful !"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/primary_color"
                android:layout_marginTop="@dimen/_25sdp"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4.5">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_lottieAnimationView_welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/sucess_lottie" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_color"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="8dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:backgroundTint="@color/primary_color"
        android:layout_weight="3.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer To Admin"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount:  ₹.1,00,000"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sdp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Amount : ₹.00.00"
                android:layout_marginTop="@dimen/_25sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_horizontal"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/editText_bg"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:text="Done"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/baloo_thambi"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>